{
    "name": "margwa-backend",
    "version": "1.0.0",
    "description": "Scalable backend services for Margwa ride-sharing platform",
    "main": "index.js",
    "scripts": {
        "db:generate": "drizzle-kit generate:pg",
        "db:push": "drizzle-kit push:pg",
        "db:studio": "drizzle-kit studio",
        "db:seed": "tsx scripts/seed-data.ts",
        "test:api": "node scripts/test-api.js",
        "auth:generate": "cd services/auth-service && npm run generate",
        "dev:gateway": "cd services/api-gateway && npm run dev",
        "dev:routes": "cd services/route-service && npm run dev",
        "dev:realtime": "cd services/realtime-service && npm run dev",
        "dev:chat": "cd services/chat-service && npm run dev",
        "dev:notifications": "cd services/notification-service && npm run dev",
        "start:gateway": "cd services/api-gateway && npm run dev",
        "start:routes": "cd services/route-service && npm run dev",
        "start:realtime": "cd services/realtime-service && npm run dev",
        "start:chat": "cd services/chat-service && npm run dev",
        "start:notifications": "cd services/notification-service && npm run dev",
        "start:auth": "cd services/auth-service && go run main.go",
        "start:payment": "cd services/payment-service && go run main.go",
        "start:analytics": "cd services/analytics-service && go run main.go",
        "build:all": "npm run build --workspaces",
        "test": "npm test --workspaces",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f"
    },
    "keywords": [
        "ride-sharing",
        "microservices",
        "typescript",
        "go",
        "rust"
    ],
    "author": "Margwa Team",
    "license": "MIT",
    "workspaces": [
        "services/api-gateway",
        "services/route-service",
        "services/realtime-service",
        "services/chat-service",
        "services/notification-service",
        "shared/database"
    ],
    "devDependencies": {
        "@types/node": "^20.10.0",
        "drizzle-kit": "^0.20.6",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "drizzle-orm": "^0.29.1",
        "postgres": "^3.4.3"
    }
}